<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootmultidatasources.dao.primary.mapper.ModelMapper">
    <update id="truncateTableModel">
        truncate table model
    </update>
    <select id="findAll" resultType="com.example.springbootmultidatasources.model.primary.Model">
        select *
        from model
    </select>
    <select id="findById" resultType="com.example.springbootmultidatasources.model.primary.Model">
        select *
        from model
        where id = #{id}
    </select>
</mapper>
